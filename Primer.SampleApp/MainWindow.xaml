<Window x:Class="Primer.SampleApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:primer="clr-namespace:Primer.SampleApp"
        Title="MainWindow" Height="350" Width="525"
        SizeToContent="WidthAndHeight">
    
    <Window.Resources>

        <!-- Tell the runtime which view to display when a MyViewModel is being used. -->
        <DataTemplate DataType="{x:Type primer:MyViewModel}">
            <primer:MyView />
        </DataTemplate>

    </Window.Resources>

</Window>
